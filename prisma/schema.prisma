model patterns {
  patternId    Int @id @default(autoincrement())
  name  String @unique
  group patternGroup  
  collection  String
  discription String
  createdAt DateTime  @default(now())
  updatedAt DateTime @updatedAt
}

enum patternGroup{
  Behavioral
  Structural
  Creational
}
